@{
    ViewBag.Title = "Kayıt Ol";
}
@model UserRegistrationDto

<div class="mx-auto col-4">
    <form asp-controller="Auth" asp-action="Register" method="post">
        <div class="mb-2">
            <input class="form-control" placeholder="İsim" type="text" autofocus="" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <input class="form-control" placeholder="Soyisim" type="text" autofocus="" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <input class="form-control" placeholder="E-mail" type="email" autofocus="" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <input class="form-control" placeholder="Şifre" asp-for="Password" type="password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-2">
            <input class="form-control" placeholder="Şifre Tekrar" asp-for="ConfirmPassword" type="password">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>