@model UserListModel

<table class="table table-hover table-bordered table-sm">
    <thead>
    <tr>
        <td>İsim-Soyisim</td>
        <td>Email</td>
        <td>Kullanıcı Adı</td>
        <td>Telefon</td>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>@user.PhoneNumber</td>
            <td>
                <a asp-controller="User" asp-action="Assign" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Admin Rolü Ata</a>
                <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
    }
    </tbody>
</table>